<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xuhuawei.mysqlite.MainActivity">

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入1000条数据"
         />
    <Button
        android:id="@+id/btn_insert_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止插入"
        />
    <TextView
        android:id="@+id/text_result_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_querry_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总共的数量"
        />
    <TextView
        android:id="@+id/text_result_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_querry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询最新一条"
        />
    <TextView
        android:id="@+id/text_result_querry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
